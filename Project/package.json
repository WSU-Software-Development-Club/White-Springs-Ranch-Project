{
  "name": "frontend",
  "version": "0.0.0",
  "main": "electron.js",
  "scripts": {
    "start:frontend": "ng serve",
    "start:python": "powershell -Command \"if (-Not (Test-Path '.\\python\\venv')) { python -m venv .\\python\\venv; & .\\python\\venv\\Scripts\\pip.exe install --upgrade pip; & .\\python\\venv\\Scripts\\pip.exe install -r .\\python\\requirements.txt }; & .\\python\\venv\\Scripts\\python.exe -m uvicorn python.main:app --reload --port 8000\"",
    "start:electron": "wait-on http://localhost:4200 && cross-env NODE_ENV=development npx electron .",
    "electron:dev": "concurrently \"npm run start:frontend\" \"npm run start:python\" \"npm run start:electron\""
  },
  "build": {
    "appId": "com.whitespringesranch.fileupload",
    "productName": "White Springs File Upload",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/frontend/browser/**/*",
      "electron.js",
      "python/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.1",
    "cross-env": "^7.0.3",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  }
}
